<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Livingroom products</title>
    <style>
        body,
        html {
            height: 100%;
            width: 100%;
            font-family: Georgia, 'Times New Roman', Times, serif;

        }

        .bg {
            background-image: url("images/bg1.png");
            height: 100%;
            width: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        h2 {
            font-size: 3em;
            color: rgb(10, 129, 158);
            margin-bottom: 1em;
            text-align: left;
        }

        span {
            float: right;
            font-size: 1.5em;
            margin-bottom: 3em;
            margin-right: 5em;
            color: white;
            word-spacing: 3em;
        }

        a {
            color: rgb(69, 143, 69);
            background-color: transparent;
            text-decoration: none;
        }
 
        a:visited {
            color: rgb(69, 143, 69);
            background-color: transparent;
            text-decoration: none;
        }

        a:hover {
            color: rgb(127, 182, 150);
            background-color: transparent;
            text-decoration: none;
        }

        div.gallery {
            margin-top: 0.12em;
            margin-left: 0.32em;
            margin-right: 0.32em;
            margin-bottom: 2.32em;
            border: 1px solid #ccc;
            float: left;
            padding-bottom: 0.12em ;
            width: 30.8em;
            height: 25em;
        }

        div.gallery:hover {
            border: 1px solid rgb(48, 47, 47);
        }

        div.gallery img {
            width: 100%;
            height: 18em;
        }

        div.description {
            margin-bottom: 1.32em;
            padding: 1.00em;
            text-align: center;
            color: rgb(21, 165, 129);
        }

        button {
            font-size: large;
            margin-left: 0.3em;
            margin-bottom: 0.3em;
            margin-top:0.3em;
            background-color: rgb(233, 231, 118);
        }
    </style>
</head>

<body class="bg">
    <header>
        <span>
            <a href="bedroom">Bedroom</a>
            <a href="kitchen">Kitchen</a>
            <a href="outdoor">Outdoor</a></span>
        <h2>Livingroom products</h2>

    </header>

      <%if(usertype=='customer'){
        for(var i=0;i<livingrooms.length;i++){ %>
            <div class="gallery">
                <a href="<%=livingrooms[i].image%>">
                    <img src='<%=livingrooms[i].image%>' alt="Livingroom" width="600" height="400">
                </a>
                <div class="description">
                    Name: <%=livingrooms[i].name%><br>
                    Price: <%=livingrooms[i].price%><br>
                    Description: <%=livingrooms[i].description%> <br>
                    Type: <%=livingrooms[i].type%> <br>
                    Available Quantity: <%=livingrooms[i].availablecount%><br/>
                    <Button><a href='orderItem?productid=<%=livingrooms[i].product_id%>'> Order Now </a></Button>                 
            </div>
                <br/><br/>
            </div> 
            <% }
      }else{
        for(var i=0;i<livingrooms.length;i++){ %>
            <div class="gallery">
                <a href="<%=livingrooms[i].image%>">
                    <img src='<%=livingrooms[i].image%>' alt="Livingroom" width="600" height="400">
                </a>
                <div class="description">
                    Name: <%=livingrooms[i].name%><br>
                    Price: <%=livingrooms[i].price%><br>
                    Description: <%=livingrooms[i].description%> <br>
                    Type: <%=livingrooms[i].type%> <br>
                    Available Quantity: <%=livingrooms[i].availablecount%><br/>
                    <Button><a href='removeitem?productid=<%=livingrooms[i].product_id%>'> Remove </a></Button>
            </div>
                <br/><br/>
            </div> 
            <% }
      }
        %>
    <footer>
        <button><a href="products">Back to Product Types</a></button>
    </footer>

</body>

</html>